<?xml version="1.0"?>
<robot name="stepper_bot">
  <link name="base_link"/>
  <joint name="stepper_joint" type="continuous">
    <parent link="base_link"/>
    <child link="stepper_motor"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>
  <link name="stepper_motor">
    <visual>
      <geometry>
        <cylinder length="0.1" radius="0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
  </link>
</robot>

